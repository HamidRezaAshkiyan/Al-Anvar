<TabViewItem
    Name="rootItem"
    x:Class="AlAnvar.UI.UserControls.QuranTabViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:table="using:AlAnvar.Database.Tables"
    mc:Ignorable="d">

    <ListView Name="quranListView" Margin="10">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="table:QuranItem">
                <RichTextBlock FontSize="24" IsTextSelectionEnabled="False">
                    <Paragraph>
                        <Run Text="{x:Bind AyahText}"/>
                        <Run FontWeight="Bold" Text="{x:Bind AyaDetail}"/>
                        <LineBreak/>
                        <Run Text="{x:Bind TranslationText}"/>
                        <Run FontWeight="Bold" Text="{x:Bind AyaDetail}"/>
                    </Paragraph>
                </RichTextBlock>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</TabViewItem>
